Package: ubuntu-express-frontend-gtk
Architecture: all
Depends: ${shlibs:Depends}, ${misc:Depends}, ${python:Depends}, python2.4-gnome2-extras, python2.4-glade2, gparted ( >= 0.0.8+cvs2005061901-0ubuntu2 ), ubuntu-express-artwork, ubuntu-express-doc
